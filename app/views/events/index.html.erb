<div class="container">
  <h1>イベント一覧</h1>
  <div class="col-md-4">&nbsp;</div>
  <div class="col-md-4 col-md-offset-4">
      <p>
        <%= link_to 'イベント登録', new_event_path, class: 'btn btn-default btn-sm' %>
      </p>
  </div>
<!-- /container--></div>

<div class="container">
  <div class="row">
   <% @events.each do |event| %>
    <div class="col-event">
      <h4><%= link_to event.title, event_path(event) %></h4>
      <p class="event_text">
        <% if event.image_url%>
          <%= image_tag event.image_url %>
        <% else %>
          <%= image_tag("no_image.png")%>
        <% end %>
        <%= event.contents %>
        <p class="date"><%= event.date.strftime("%Y年%m月%d日") %></p>
      </p>
    </div><!--/.col-xs-4.col-lg-4-->
  <% end %>
  <!-- /row --></div>
<!-- container --></div>
