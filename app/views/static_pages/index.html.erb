<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="mainVisual">
  <div class="jumbotron">
    <div class="container">
      <blockquote>
        <p><%=@message.message%></p>
        <footer>
          <cite title="Source Title"><%=@message.by%></cite>
        </footer>
      </blockquote>
    </div>
  </div>
</div>
<div class="container">
  <% @news.each do |x| %>
    <pre>  <%= x.date.strftime("%Y.%m.%d") %> <%=  x.text %></pre>
  <% end %>
</div>
